{
    "compilerOptions": {
        "downlevelIteration": true,
        "allowSyntheticDefaultImports": true,
        "noPropertyAccessFromIndexSignature": true,
        "allowUnreachableCode": false,
        "declaration": false,
        "experimentalDecorators": true,
        "lib": [
            "dom",
            "esnext",
            "dom.Iterable"
        ],
        "moduleResolution": "node",
        "module": "esnext",
        "target": "es2017",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitAny": true,
        "removeComments": true,
        "newLine": "lf",
        "jsx": "react",
        "jsxFactory": "h"
    },
    "include": [
        "./app/javascript"
    ],
    "exclude": [
        "node_modules"
    ]
}
